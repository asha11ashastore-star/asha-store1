# Database Configuration
DATABASE_URL=sqlite:///./clothing_store.db
# For PostgreSQL use:
# DATABASE_URL=postgresql://user:password@localhost:5432/clothing_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Razorpay Configuration (Get from https://dashboard.razorpay.com/app/keys)
RAZORPAY_KEY_ID=rzp_test_your_key_here
RAZORPAY_KEY_SECRET=your_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (Optional - for OTP)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=CLOTHS
